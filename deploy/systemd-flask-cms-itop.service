[Unit]
Description=Flask CMS iTop (gunicorn)
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/flask-cms-itop
Environment="FLASK_ENV=production"
EnvironmentFile=/opt/flask-cms-itop/.env
ExecStart=/opt/flask-cms-itop/.venv/bin/gunicorn -c gunicorn.conf.py wsgi:application
Restart=always
RestartSec=5
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target


