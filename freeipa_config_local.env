# تنظیمات FreeIPA محلی
FREEIPA_HOST=127.0.0.1
FREEIPA_PORT=1389
FREEIPA_USE_SSL=false
FREEIPA_BASE_DN=dc=local,dc=local
FREEIPA_BIND_DN=cn=admin,cn=users,dc=local,dc=local
FREEIPA_BIND_PASSWORD=MySecretPassword123

# تنظیمات پایه
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=true

# تنظیمات دیتابیس
DATABASE_URL=sqlite:///instance/cms.db

# تنظیمات Redis
REDIS_URL=redis://localhost:6379/0

# تنظیمات ایمیل
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# تنظیمات پنل مدیریت
ADMIN_EMAIL=admin@local.local

# تنظیمات لاگ
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# تنظیمات Cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# تنظیمات Rate Limiter
RATELIMIT_STORAGE_URI=memory://
